{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "base-lib": {
      "projectType": "library",
      "root": "projects/base-lib",
      "sourceRoot": "projects/base-lib/src",
      "prefix": "base-lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "projects/base-lib/tsconfig.lib.json",
            "project": "projects/base-lib/ng-package.json"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/base-lib/src/test.ts",
            "tsConfig": "projects/base-lib/tsconfig.spec.json",
            "karmaConfig": "projects/base-lib/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/base-lib/tsconfig.lib.json",
              "projects/base-lib/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }},
  "defaultProject": "base-lib"
}